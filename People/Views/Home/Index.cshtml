<div class="align-left">
    <h1 class="display-4">People</h1>
    <br />
    <a href="/home/add" class="btn btn-success">Add Person</a>
    <br />
    <br />
    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
        </tr>

        @foreach (Person p in Model.People)
        {
            <tr>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.Age</td>
            </tr>
        }
    </table>
</div>
